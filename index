<div id="deleteModal" class="modal">
    <div class="modal-content">
        <h2>Confirm Permanent Data Deletion</h2>
        <p>This action is **irreversible** and will permanently delete **all** data and tokens associated with the Slack integration for **TRADE SHOWS ORG**. This is required to fulfill a formal data removal request.</p>
        <button id="cancelDelete">Cancel</button>
        <button id="confirmDelete">Yes, Permanently Delete Data</button>
    </div>
</div>

<script>
    const slackToggle = document.getElementById('slackToggle');
    const deleteButton = document.getElementById('deleteSlackData');
    const modal = document.getElementById('deleteModal');
    const confirmButton = document.getElementById('confirmDelete');
    const cancelButton = document.getElementById('cancelDelete');

    // Function to update the delete button state
    function updateDeleteButtonState() {
        if (slackToggle.checked) {
            // Feature is ON -> Deletion is disabled
            deleteButton.disabled = true;
            deleteButton.title = "The feature must be disabled before data can be deleted.";
        } else {
            // Feature is OFF -> Deletion is enabled
            deleteButton.disabled = false;
            deleteButton.title = "Permanently delete all Slack data for this organization.";
        }
    }

    // Initial state setup
    updateDeleteButtonState();

    // Event listener for the toggle change
    slackToggle.addEventListener('change', updateDeleteButtonState);

    // Event listener to show the modal when the delete button is clicked
    deleteButton.addEventListener('click', () => {
        if (!deleteButton.disabled) {
            modal.style.display = 'block';
        }
    });

    // Event listener to close the modal
    cancelButton.addEventListener('click', () => {
        modal.style.display = 'none';
    });

    // Event listener for the final confirmation
    confirmButton.addEventListener('click', () => {
        // --- BACKEND API CALL WOULD GO HERE ---
        console.log('API CALL: Initiating permanent deletion of Slack integration data for TRADE SHOWS ORG...');
        alert('Data deletion process initiated. The records will be purged from the database shortly.');
        
        // After deletion, you would typically disable the button and perhaps remove the entire row
        deleteButton.disabled = true;
        deleteButton.textContent = "Data Deleted";
        deleteButton.style.backgroundColor = '#f8d7da';
        deleteButton.style.color = '#721c24';
        deleteButton.style.borderColor = '#f5c6cb';
        deleteButton.title = "Slack data has been purged and cannot be recovered.";
        
        modal.style.display = 'none';
    });

    // Close the modal if the user clicks outside of it
    window.addEventListener('click', (event) => {
        if (event.target === modal) {
            modal.style.display = 'none';
        }
    });
</script>

</body>
